@model RevistaJuridica.Models.Event

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="page-banner">
        <div class="page-banner__bg-image" style="background-image: url(/Documents/Events/@Model.EventImage.Name);"></div>
        <div class="page-banner__content container container--narrow">
            <h1 class="page-banner__title">@Model.Name</h1>
        </div>
    </div>

    <div class="container container--narrow page-section">

        <div class="metabox metabox--position-up metabox--with-home-link">
            <p><a class="metabox__blog-home-link" href="@Url.Action("Index", "Event")"><i class="fa fa-home" aria-hidden="true"></i> Regresar</a> <span class="metabox__main">@Model.Name</span></p>
        </div>

        <div class="page-links">
            <h2 class="page-links__title">Detalles</h2>
            <ul class="min-list">
                <li class="current_page_item">
                    <a>
                        <p>
                            <span>
                                <i class="fas fa-map-marker-alt"></i>
                            </span>
                            @Model.Location
                        </p>
                    </a>
                </li>
                <li>
                    <a>
                        <p>
                            <span>
                                <i class="fas fa-clock"></i>
                            </span>
                            @Model.EventDate.ToString("dd MMM yyyy hh:mm tt")
                        </p>
                    </a>
                </li>
                <li>
                    <a href="@Model.EventLink">
                        <p>
                            <span>
                                <i class="fas fa-link"></i>
                            </span>
                            Ver Evento
                        </p>
                    </a>
                </li>
            </ul>
        </div>

        <div class="generic-content">
            <p>@Model.Description</p>
        </div>

    </div>
</body>



