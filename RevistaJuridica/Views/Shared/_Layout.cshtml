    @RenderBody()

    <footer class="site-footer">

        <div class="site-footer__inner container container--narrow">

            <div class="group">

                <div class="site-footer__col-one">
                    <h1 class="school-logo-text school-logo-text--alt-color"><a href="#"><strong>Revista</strong> Jurídica</a></h1>
                    <p>
                        <a class="site-footer__link" href="#">(787)751-1912 #2078</a>
                        <a class="site-footer__link" href="#">(787)751-1912 #2078</a>
                    </p>
                </div>

                <div class="site-footer__col-two-three-group">
                    <div class="site-footer__col-two">
                        <h3 class="headline headline--small"></h3>
                        <nav class="nav-list">
                            <ul>
                                <li>@Html.ActionLink("Conócenos", "Index", "About")</li>
                                <li>@Html.ActionLink("Volúmenes", "Index", "Article")</li>
                                <li>@Html.ActionLink("Eventos", "Index", "Event")</li>
                                <li><a href="#">Contáctanos</a></li>
                            </ul>
                        </nav>
                    </div>

                    <div class="site-footer__col-three">
                        <h3 class="headline headline--small"></h3>
                        <nav class="nav-list">
                            <ul>
                            </ul>
                        </nav>
                    </div>
                </div>

                <div class="site-footer__col-four">
                    <h3 class="headline headline--small">Síguenos</h3>
                    <nav>
                        <ul class="min-list social-icons-list group">
                            <li><a href="#" class="social-color-facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="#" class="social-color-instagram"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://kit.fontawesome.com/b29dee2e36.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
